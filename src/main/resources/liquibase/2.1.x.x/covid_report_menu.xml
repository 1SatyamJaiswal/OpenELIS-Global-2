<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
	  
	  
  	<property name="now" value="now()" dbms="postgresql"/>

	<changeSet author="csteele" id="1" context="mauritius">
		<preConditions onFail="MARK_RAN">
			<sqlCheck  expectedResult="0">SELECT count(*) FROM clinlims.menu WHERE element_id = 'menu_reports_covid'</sqlCheck> 
			<sqlCheck  expectedResult="1">SELECT count(*) FROM clinlims.menu WHERE element_id = 'menu_reports_routine'</sqlCheck> 
		</preConditions>
		
		<insert schemaName="clinlims" tableName="menu">
			<column name="id" valueSequenceNext="menu_seq" />
			<column name="parent_id" valueComputed="(SELECT id FROM menu WHERE element_id = 'menu_reports_routine')" />
			<column name="presentation_order" valueComputed="(
				(SELECT MAX(presentation_order) FROM clinlims.menu
					WHERE parent_id =  (SELECT id FROM clinlims.menu WHERE element_id = 'menu_reports_routine')
		 		) + 10)" 
		 	/>
			<column name="element_id" value="menu_reports_covid" />
			<column name="action_url" value="/Report.do?type=CSV&amp;report=covidResultsReport" />
			<column name="display_key" value="reports.menu.covid" />
			<column name="tool_tip_key" value="reports.menu.tooltip.covid" />
			<column name="new_window" value="false" />
			<column name="is_active" value="true" />
		</insert>
		<rollback>
			<delete schemaName="clinlims" tableName="menu">
				<where>element_id = 'menu_reports_covid'</where>
			</delete>
		</rollback>
	</changeSet>
</databaseChangeLog>