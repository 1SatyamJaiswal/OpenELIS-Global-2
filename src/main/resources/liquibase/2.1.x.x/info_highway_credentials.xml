<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<property name="now" value="now()" dbms="postgresql" />

	<changeSet author="csteele" id="1">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">SELECT count(*) FROM
				clinlims.site_information_domain WHERE name = 'externalConnections'
			</sqlCheck>
		</preConditions>
		<insert schemaName="clinlims"
			tableName="site_information_domain">
			<column name="id"
				valueSequenceNext="site_information_domain_seq" />
			<column name="name" value="externalConnections" />
			<column name="description"
				value="Connection info for external services" />
		</insert>
		<rollback>
			<delete schemaName="clinlims"
				tableName="site_information_domain">
				<where>name='externalConnections'</where>
			</delete>
		</rollback>
	</changeSet>

	<changeSet author="csteele" id="2">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">SELECT count(*) FROM
				clinlims.site_information WHERE name = 'infoHighway.enabled'
			</sqlCheck>
		</preConditions>
		<insert schemaName="clinlims" tableName="site_information">
			<column name="id" valueSequenceNext="site_information_seq" />
			<column name="name" value="infoHighway.username" />
			<column name="lastupdated" valueComputed="${now}" />
			<column name="description"
				value="username for the connection tho the InfoHighway" />
			<column name="value" value="" />
			<column name="encrypted" valueBoolean="true" />
			<column name="domain_id"
				valueComputed="(SELECT id FROM clinlims.site_information_domain WHERE name = 'externalConnections')" />
			<column name="value_type" value="text" />
		</insert>
		<insert schemaName="clinlims" tableName="site_information">
			<column name="id" valueSequenceNext="site_information_seq" />
			<column name="name" value="infoHighway.password" />
			<column name="lastupdated" valueComputed="${now}" />
			<column name="description"
				value="password for the connection tho the InfoHighway" />
			<column name="value" value="" />
			<column name="encrypted" valueBoolean="true" />
			<column name="domain_id"
				valueComputed="(SELECT id FROM clinlims.site_information_domain WHERE name = 'externalConnections')" />
			<column name="value_type" value="text" />
		</insert>
		<insert schemaName="clinlims" tableName="site_information">
			<column name="id" valueSequenceNext="site_information_seq" />
			<column name="name" value="infoHighway.uri" />
			<column name="lastupdated" valueComputed="${now}" />
			<column name="description"
				value="address for the connection tho the InfoHighway" />
			<column name="value" value="" />
			<column name="encrypted" valueBoolean="true" />
			<column name="domain_id"
				valueComputed="(SELECT id FROM clinlims.site_information_domain WHERE name = 'externalConnections')" />
			<column name="value_type" value="text" />
		</insert>
		<insert schemaName="clinlims" tableName="site_information">
			<column name="id" valueSequenceNext="site_information_seq" />
			<column name="name" value="infoHighway.enabled" />
			<column name="lastupdated" valueComputed="${now}" />
			<column name="description"
				value="enable or disable the connection to the InfoHighway" />
			<column name="value" value="true" />
			<column name="encrypted" valueBoolean="false" />
			<column name="domain_id"
				valueComputed="(SELECT id FROM clinlims.site_information_domain WHERE name = 'externalConnections')" />
			<column name="value_type" value="boolean" />
		</insert>
		<rollback>
			<delete schemaName="clinlims" tableName="site_information">
				<where>name='infoHighway.username' OR name='infoHighway.password' OR
					name='infoHighway.uri' OR name='infoHighway.enabled'
				</where>
			</delete>
		</rollback>
	</changeSet>
</databaseChangeLog>