<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="john" id="1">
        <comment>Creates NCE Type table</comment>
        <createSequence
                        incrementBy="1"
                        maxValue="2147483647"
                        minValue="1"
                        schemaName="clinlims"
                        sequenceName="nc_event_id_seq"
                        startValue="1"/>
        <createTable tableName="nce_type" schemaName="clinlims">
            <column name="id" type="integer">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="character varying(200)" />
            <column name="display_key" type="character varying(100)" />
            <column name="category_id" type="integer">
                <constraints />
            </column>
            <column name="active" type="character varying(1)" />
            <column name="last_updated" type="timestamp with time zone" />
        </createTable>
    </changeSet>
</databaseChangeLog>